        "common_mistakes": [],
        "examples": [
          {
            "id": "ex1",
            "text": "Go straight and turn left **at the corner**.",
            "translation": "Идите прямо и поверните налево **на углу**.",
            "tags": [
              "affirmative"
            ]
          },
          {
            "id": "ex2",
            "text": "The bank is **across from** the station.",
            "translation": "Банк **напротив** станции.",
            "tags": [
              "affirmative"
            ]
          }
        ]
      }
