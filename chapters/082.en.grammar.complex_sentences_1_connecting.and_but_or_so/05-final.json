  "blocks": [
    {
      "id": "b1_coordination_and",
      "type": "theory",
      "title": "And соединяет идеи и действия: добавление, последовательность или список.",
      "theory": {
        "concept_id": "coordination_and",
        "content_md": "**And** соединяет идеи и действия: добавление, последовательность или список.\n\nИспользуйте and, когда хотите показать, что два факта равны по важности и логично идут вместе.",
        "key_points": [],
        "common_mistakes": [],
        "examples": [
          {
            "id": "ex1",
            "text": "I opened the window **and** sat down.",
            "translation": "Я открыл окно **и** сел.",
            "tags": [
              "affirmative"
            ]
          },
          {
            "id": "ex2",
            "text": "We bought bread **and** milk.",
            "translation": "Мы купили хлеб **и** молоко.",
            "tags": [
              "affirmative"
            ]
          }
        ]
      }
    },
