        "common_mistakes": [],
        "examples": [
          {
            "id": "ex1",
            "text": "She is **afraid of** heights.",
            "translation": "Она боится высоты.",
            "tags": [
              "affirmative"
            ]
          },
          {
            "id": "ex2",
            "text": "Are you **proud of** your work?",
            "translation": "Ты гордишься своей работой?",
            "tags": [
              "question"
            ]
          }
        ]
      }
