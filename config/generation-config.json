{
  "schema_version": "1.0.0",
  "default_language_settings": {
    "ui_language": "ru",
    "target_language": "en"
  },
  "generation_limits": {
    "max_theory_blocks": 9,
    "min_theory_blocks": 3,
    "min_questions_per_block": 10,
    "min_total_questions": 60,
    "recommended_total_questions": 80,
    "min_examples_per_chapter": 8,
    "min_negative_examples": 2,
    "min_question_examples": 2
  },
  "question_type_distribution": {
    "required_types": ["mcq_single"],
    "recommended_distribution": {
      "mcq_single": 30,
      "fill_blank": 15,
      "error_spotting": 15,
      "reorder": 10,
      "true_false": 10
    }
  },
  "chapter_test_config": {
    "num_questions": 10,
    "min_pool_size": 20,
    "selection_strategy": {
      "type": "stratified_by_theory_block",
      "min_per_theory_block": 1,
      "avoid_recent_window": 30,
      "difficulty_mix": {
        "easy": 3,
        "medium": 5,
        "hard": 2
      }
    }
  },
  "validation_strictness": {
    "enforce_all_limits": true,
    "check_semantic_duplicates": true,
    "require_explanation_for_all": true
  },
  "paths": {
    "schema_file": "02-chapter-schema.json",
    "prompts_dir": "prompts",
    "chapters_dir": "chapters",
    "sections_file": "01-sections.md"
  }
}
